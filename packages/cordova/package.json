{
  "name": "@ptcg/cordova",
  "displayName": "RyuuPlay",
  "version": "0.1.0",
  "description": "Android client for the ptcg server.",
  "main": "index.js",
  "scripts": {
    "build-server": "cd ../ptcg-server && npm run build",
    "build-www": "cd ../ptcg-play && npm run build -- --configuration production --base-href ./ --output-path ../ptcg-cordova/www/",
    "patch-cordova": "node ./patch-cordova",
    "build": "npm run build-www && npm run patch-cordova",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "ecosystem:cordova"
  ],
  "author": "Apache Cordova Team",
  "license": "Apache-2.0",
  "devDependencies": {
    "cordova": "^11.0.0",
    "cordova-android": "^9.0.0",
    "cordova-browser": "^6.0.0",
    "cordova-plugin-device": "^2.0.3",
    "cordova-plugin-file": "^6.0.2",
    "cordova-plugin-file-transfer": "^1.7.1",
    "cordova-plugin-statusbar-patched": "http://dev.ryuu.eu/distfiles/cordova-plugin-statusbar-patched-2.4.3.tar.gz",
    "cordova-plugin-whitelist": "^1.3.4"
  },
  "cordova": {
    "plugins": {
      "cordova-plugin-whitelist": {},
      "cordova-plugin-statusbar-patched": {},
      "cordova-plugin-file": {},
      "cordova-plugin-file-transfer": {},
      "cordova-plugin-device": {}
    },
    "platforms": [
      "browser",
      "android"
    ]
  }
}