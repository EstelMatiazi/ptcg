{
  "name": "ptcg-server",
  "version": "0.0.1",
  "description": "Server of the ptcg game.",
  "main": "index.js",
  "scripts": {
    "lint": "tslint {src/**/*.ts,src/*.ts}",
    "build": "npm run lint && npm run test && tsc",
    "start": "node dist/start.js",
    "start:dev": "nodemon -e ts --exec \"tsc && npm run start\"",
    "test": "nyc -e \".ts\" -x \"src/**/*.spec.ts\" jasmine-ts \"src/**/*.spec.ts\"",
    "coverage": "npm test && nyc report -r html"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "colyseus": "^0.11.14",
    "express": "^4.17.1",
    "mysql": "^2.17.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.19"
  },
  "devDependencies": {
    "@types/express": "^4.17.1",
    "@types/jasmine": "^2.8.2",
    "@types/node": "^12.7.5",
    "jasmine-ts": "^0.2.1",
    "nodemon": "^1.19.2",
    "nyc": "^11.4.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "typescript": "^3.6.2"
  },
  "nodemonConfig": {
    "ignore": [
      "coverage/*",
      "dist/*",
      ".nyc_output/*"
    ],
    "delay": "2500",
    "watch": "src"
  }
}
