{
  "name": "ptcg-server",
  "version": "0.0.1",
  "description": "Server of the ptcg game.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "lint": "tslint {src/**/*.ts,src/*.ts}",
    "build": "npm run lint && npm run test && tsc",
    "start": "node start.js",
    "start:dev": "nodemon -e ts --exec \"tsc && npm run start\"",
    "test": "nyc -e \".ts\" -x \"src/**/*.spec.ts\" jasmine-ts \"src/**/*.spec.ts\"",
    "coverage": "npm test && nyc report -r html"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "jimp": "^0.16.1",
    "mysql": "^2.18.1",
    "nodemailer": "^6.4.14",
    "pako": "^1.0.11",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.2.0",
    "sqlite3": "^5.0.0",
    "typeorm": "^0.2.25"
  },
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/jasmine": "^2.8.17",
    "@types/node": "^12.12.54",
    "@types/nodemailer": "^6.4.0",
    "@types/pako": "^1.0.1",
    "jasmine-ts": "^0.2.1",
    "nodemon": "^1.19.4",
    "nyc": "^15.1.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.20.1",
    "typescript": "^3.9.7"
  },
  "nodemonConfig": {
    "ignore": [
      "coverage/*",
      "dist/*",
      ".nyc_output/*"
    ],
    "delay": "2500",
    "watch": "src"
  }
}
